<h1><%= @document.title %></h1>
<%= link_to "Back to All Documents", documents_path %>

<p><strong>Category:</strong> <%= @document.category %></p>
<p><strong>Keywords:</strong>
  <% if @document.keywords.present? %>
    <% @document.keywords.split(',').map(&:strip).each do |kw| %>
      <%= link_to kw, documents_path(keyword: kw), style: "background: #ddd; padding: 2px 5px; margin: 2px; border-radius: 3px;" %>
    <% end %>
  <% else %>
    No keywords
  <% end %>
</p>


<% if @document.file.attached? %>
  <div style="display: flex; gap: 20px; margin-top: 20px;">
    
    <!-- PDF Viewer Area -->
    <div style="flex: 3;">
      <h3>File Preview</h3>
      <%= tag.iframe src: url_for(@document.file), width: "100%", height: "600px", style: "border: 1px solid #ccc;" %>
    </div>

    <div style="flex: 1;">
      <h3>Comments</h3>
      <p>This section will hold comments.</p>
      <%= link_to "Edit Document", edit_document_path(@document), class: "button" %>
    </div>

  </div>
<% else %>
  <p>No file attached.</p>
<% end %>

<h3><b>Comments:</b><h3>
<hr>
<% if ! @document.comments.nil? %>
  <% @document.comments.each do |comment|%>
    <%=comment.content %>
    <hr>
  <% end%>
<%else%>
    <p>no comments</p>
<%end%>

<%=link_to "Write a comment", comments_path%>

<p style="color: green"><%= notice %></p>

<% content_for :title, "Users" %>

<div class="card">
  <div class="card-header">
    <i class="bi bi-journals"></i> <%= pluralize(@users.count, "USER", plural:"USERS") %>
    <% if !logged_in? %>
      <a href="<%= new_user_path %>" class="btn btn-primary btn-sm float-end"><i class="bi bi-pencil-square"></i> Sign Up</a>
    <% end %>
  </div>
  <div class="card-body">
    <ol class="list-group list-group-numbered" id="users">
      <% @users.each do |user| %>
        <li class="list-group-item d-flex justify-content-between align-items-start">
          <div class="ms-2 me-auto">
            <div class="fw-bold"><a href="<%= home_path %>"><%= user.username %></a></div>
            <%= user.email %>
          </div>
          <!-- <span class="badge text-bg-primary rounded-pill"><%= pluralize(user.documents.count, "Document", plural:"Documents") %></span> -->        </li>
      <% end %>
      
    </ol>

  </div>
</div>
